<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Find the brush \nthat's right for you:"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BENEFITS"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/drak_gray"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/btnBestClean"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_corner">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/best_possible_clean"
                            android:padding="@dimen/border_width"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btnWhiterSmile"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:gravity="center"
                        android:background="@drawable/rounded_corner">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/whiter_smile"
                            android:padding="@dimen/border_width"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/btnSpeciality"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:gravity="center"
                        android:background="@drawable/rounded_corner">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/specialty"
                            android:padding="@dimen/border_width"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BRISTLE \nTYPE"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/drak_gray"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/btnExtraSoft"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_corner">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/extra_soft"
                            android:padding="@dimen/border_width"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btnSoft"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:gravity="center"
                        android:background="@drawable/rounded_corner">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/soft"
                            android:padding="@dimen/border_width"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/btnMedium"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:gravity="center"
                        android:background="@drawable/rounded_corner">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/medium"
                            android:padding="@dimen/border_width"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_gray">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BRAND"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/drak_gray"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="30dp">
                <RelativeLayout
                    android:id="@+id/btnColgate"
                    android:layout_width="298dp"
                    android:layout_height="92dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/colgate"
                        android:scaleType="fitXY"
                        android:padding="@dimen/border_width"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/btnOral"
                    android:layout_width="220dp"
                    android:layout_height="92dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_corner">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/oral"
                        android:scaleType="fitXY"
                        android:padding="@dimen/border_width"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/light_gray1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="WHAT'S NEW"
                android:textSize="25sp"
                fancy:fb_textColor="@android:color/white"
                fancy:fb_defaultColor="@color/drak_gray"
                fancy:fb_borderWidth="3dp"
                fancy:fb_borderColor="@color/drak_gray"
                fancy:fb_radius="10dp"
                android:layout_marginStart="50dp"
                android:layout_centerVertical="true"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="SUBMIT"
                android:textSize="25sp"
                fancy:fb_textColor="@android:color/white"
                fancy:fb_defaultColor="@color/blue"
                fancy:fb_borderWidth="3dp"
                fancy:fb_borderColor="@color/blue"
                fancy:fb_radius="10dp"
                android:layout_marginEnd="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:onClick="onSubmit" />
            <EditText
                android:id="@+id/dataField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="250dp"
                android:layout_marginRight="250dp"
                android:layout_marginTop="15dp"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>